<!-- Loader.razor -->
<div class="loader-container" style="display: @(isLoading ? "" : "none")">
    <div class="loader"></div>
    @if (IsMessage)
    {
        <br />
        <p>
            Please wait... saving invoice will take some time
        </p>
    }
  
</div>

@code {
    [Parameter] public bool isLoading { get; set; }
    [Parameter] public bool IsMessage { get; set; } = false;
}


