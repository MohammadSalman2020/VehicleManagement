@if (IsLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>@LoadingText</p>
    </div>
}


@code {

    [Parameter]
    public string? LoadingText { get; set; }
    [Parameter]
    public bool IsLoading { get; set; }

}
