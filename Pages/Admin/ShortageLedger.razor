                // var url = $"/scinvdisplay?InvoiceID={encodedJson}";
                // await JSRuntime.InvokeVoidAsync("openInNewTab", url);
            }
        }
        catch (Exception ex)
        {

            toastService.ShowError($"Error: {ex.Message}");
        }

