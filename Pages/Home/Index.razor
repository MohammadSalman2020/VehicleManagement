@code {

    private async Task RequestPushNotificationPermission()
    {
        await JSRuntime.InvokeVoidAsync("requestPushNotificationPermission");
    }

    // Method to obtain device token for push notifications
    private async Task<string> GetDeviceToken()
    {
        return await JSRuntime.InvokeAsync<string>("getDeviceToken");
    }


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await RequestPushNotificationPermission();
            await GetDeviceToken();

            StateHasChanged();
        }
    }

    protected override async Task OnInitializedAsync()
    {
       
    }



}
